<div class="col-md-6 col-lg-4 item">
  <div class="box">
    <% if business.avatar.attached? %>
      <img src="<%= url_for(business.avatar) %>" class="rounded-circle" alt="...">
    <% else %>
      <%= image_tag("avatar_green_bg.png", :alt => "avatar", :class => "rounded-circle") %>
    <% end %>
    <h3 class="name"><%= business.name %></h3>
    <p class="title"><%= business.business_type&.name %></p>
    <div class="social">
      <a href=<%= business.telephone %>><i class="bi bi-telephone"></i></a>
      <a href=<%= business.email %>><i class="bi bi-envelope"></i></a>
      <a href=<%= business.website %>><i class="bi bi-globe"></i></a>
      <a href="#"><i class="bi bi-arrow-90deg-right"></i></a>
      <a href=<%= business.location %>><i class="bi bi-arrow-up-right"></i></a>
    </div>
  </div>
</div>

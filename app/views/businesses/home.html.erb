<div class="main container-fluid mb-5 noPadding">
  <div class="teaser d-flex flex-column justify-content-center align-items-center">
    <div class="box">
            <%= image_tag("img.png", :alt => "Teaser Picture", class: "teaserPic") %>
    </div>
    <h1>Hello</h1>

    <%= render :partial => 'search_form' %>
    
  </div>
</div>


<style media="screen">
  body {
    background-color: white;
  }

  .main {
    flex-grow: 0;
  }

  .noPadding {
    padding: 0 !important;
  }

  .teaser {
    min-height: 710px;
    width: 100vw;
    background-size: cover;
    background-repeat: no-repeat;
    position: relative;
  }

  .teaser h1 {
    position: relative;
    z-index: 100;
    margin-top: 40px;
    font-family: sans-serif;
    font-size: 30vw;
    font-weight: 1000;
    color: #385aef;
    -webkit-text-fill-color: rgba(
      255,
      255,
      255,
      0
    ); /* Will override color (regardless of order) */
    -webkit-text-stroke-width: 3px;
    -webkit-text-stroke-color: #385aef;
  }

  .teaser .box {
    position: absolute;
    width: 100vw;
    height: 100%;
    background-color: black;
    z-index: 0;
  }

  .teaser .box .teaserPic{
    width: 100vw;
    min-width: 1420px;
    overflow: hidden;
  }


  @media (min-width: 576px) {
  }


  @media (max-width: 900px) {
    .searchFull {
      display: none
    }

    .teaser h1 {
      margin-top: 300px  }

  }

  @media (min-width: 901px) {
    .searchMobile {
      display: none
    }
  }


  @media (max-width: 1420px) {
    .teaser .box .teaserPic{
      transform: translateX(calc(100vw - 1420px))
    }
  }

  @media (max-width: 740px) {
    .teaser .box .teaserPic{
      transform: translateX(-680px)
    }
  }

  @media (max-width: 380px) {
    .teaser .box .teaserPic{
      transform: translateX(-800px)
    }
  }
</style>
